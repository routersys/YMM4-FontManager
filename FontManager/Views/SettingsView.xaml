<UserControl x:Class="FontManager.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FontManager.ViewModels"
             Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <UserControl.DataContext>
        <vm:SettingsViewModel />
    </UserControl.DataContext>
    <StackPanel Margin="16">
        <TextBlock Text="Google Fonts API キー" FontWeight="Bold" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Margin="0,0,0,8"/>
        <TextBox Text="{Binding Settings.GoogleFontsApiKey, UpdateSourceTrigger=PropertyChanged}" Padding="4" Height="26"/>
    </StackPanel>
</UserControl>